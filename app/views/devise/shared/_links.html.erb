<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class: "block w-full text-center p-2 mb-2 cursor-pointer text-white bg-indigo-500 rounded-lg hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "block w-full text-center p-2 cursor-pointer text-white bg-indigo-500 rounded-lg mb-2 hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "block w-full text-center p-2 cursor-pointer text-white bg-indigo-500 mb-2 rounded-lg hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= form_for "Login",
      url: omniauth_authorize_path(resource_name, provider),
      method: :post,
      data: { turbo: "false" } do |f| %>
      <%= f.submit "Login", type: "image", src: url_for("/assets/web_neutral_sq_ctn@1x.png") %>
    <% end %>
  <% end %>
<% end %>
