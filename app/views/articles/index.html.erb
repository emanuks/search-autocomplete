<p style="color: green"><%= notice %></p>

<div class="flex justify-around h-14 py-1 bg-zinc-300 items-center shadow-sm mb-4">
  <span class="text-2xl text-center">Articles</span>
  <%= button_to "Logout", destroy_user_session_path, data: { turbo: false }, method: :delete %>
</div>

<div class="flex justify-between py-1 items-center mb-4 mx-10">
  <div class="flex justify-center">
    <%= render partial: "search/form", locals: {results: []} %>
  </div>
  <%= link_to "New article", new_article_path %>
</div>

<div id="articles" class="my-4 mx-10">
  <%= render "articles/articles", articles: @articles %>
</div>


